<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#af20486f"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="56dp">

    <com.macortesn.androidtictactoe.BoardView

        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>


    <TextView android:id="@+id/humani"
        android:layout_width="270dp"
        android:layout_height="wrap_content"    			android:text="Human"
        android:gravity="center_horizontal" 		      android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:textSize="20dp" />
    <TextView android:id="@+id/tiei"    	           	android:layout_width="270dp"
        android:layout_height="wrap_content"    			android:text="Ties"
        android:gravity="center_horizontal" 		      android:layout_marginTop="80dp"
        android:layout_marginLeft="300dp"
        android:textSize="20dp" />
    <TextView android:id="@+id/androidi"    	           	android:layout_width="270dp"
        android:layout_height="wrap_content"    			android:text="Android"
        android:gravity="center_horizontal" 		      android:layout_marginTop="130dp"
        android:layout_marginLeft="300dp"
        android:textSize="20dp" />

    <TextView android:id="@+id/information"    	           	android:layout_width="270dp"
        android:layout_marginLeft="300dp"
        android:layout_height="wrap_content"    			android:text="info"
        android:gravity="center_horizontal" 		      android:layout_marginTop="180dp"
        android:textSize="20dp" />
    <TextView android:id="@+id/empty"    	           	android:layout_width="fill_parent"
        android:layout_height="wrap_content"    			android:text="empty"
        android:gravity="center_horizontal" 		      android:layout_marginTop="300dp"
        android:textSize="20dp" />

</RelativeLayout>
